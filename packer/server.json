{
  "variables": {
    "name": "Gordon"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "profile": "{{user `profile`}}",
      "region": "{{user `region`}}",
      "source_ami": "{{user `base_ami_id`}}",
      "instance_type": "t3.large",
      "force_deregister": "true",
      "force_delete_snapshot": "true",
      "ssh_username": "ubuntu",
      "ami_name": "{{user `application_name`}}",
      "ami_regions": [
        "{{user `region`}}"
      ],
      "tags": {
        "Name": "{{user `application_name`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo apt-add-repository ppa:ansible/ansible",
        "sudo apt update",
        "sudo apt install ansible -y"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "../ansible/server.yml",
      "role_paths": [
        "../ansible/roles/nginx",
        "../ansible/roles/php",
        "../ansible/roles/permissions",
        "../ansible/roles/composer"
      ],
      "group_vars": "../ansible/group_vars"
    },
    {
      "type": "file",
      "source": "../ansible/roles/nginx/templates/zapier.ingress.gordonmurray.com",
      "destination": "/home/ubuntu/zapier.ingress.gordonmurray.com"
    },
    {
      "type": "file",
      "source": "../app/php/src/index.php",
      "destination": "/var/www/html/"
    },
    {
      "type": "file",
      "source": "../app/php/src/composer.json",
      "destination": "/var/www/html/"
    },
    {
      "type": "shell",
      "inline": [
        "sudo mv /home/ubuntu/zapier.ingress.gordonmurray.com /etc/nginx/sites-available/zapier.ingress.gordonmurray.com",
        "sudo ln -s /etc/nginx/sites-available/zapier.ingress.gordonmurray.com /etc/nginx/sites-enabled/",
        "sudo rm -f /etc/nginx/sites-enabled/default",
        "cd /var/www/html/ && php composer.phar install",
        "rm -f /var/www/html/composer.phar"
      ]
    },
    {
      "type": "inspec",
      "profile": "../inspec/controls/nginx.rb"
    }
  ]
}